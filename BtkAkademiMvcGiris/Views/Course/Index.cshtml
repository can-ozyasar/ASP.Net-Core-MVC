@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{

    <h6 class="display-6">
    
    Applications(@Model.Count())
    
    </h6>
    
    
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th>Email</th>
                <th>Full Name</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>

        </thead>


        <tbody>

            @foreach (Candidate candidate in Model)
            {


                <tr>

                    <td>@candidate.Email</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>


                </tr>


            }




        </tbody>

        

    </table>




<h4 class="alert alert-success">toplam @Model.Count() adet veri listeleniyor .</h4>


}
else
{



    <div class="alert alert-info"> There Ä°s No Application. Please Click Here to <a class="alert-link"
            asp-action="Apply">Apply</a> </div>



}